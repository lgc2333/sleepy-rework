{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "debugpy",
      "request": "launch",
      "module": "sleepy_rework",
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": false,
      "env": {
        "SLEEPY_ENVIRONMENT": "dev"
      }
    },
    {
      "name": "Frontend (Chrome)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/website/src"
    },
    {
      "name": "Client - Desktop",
      "type": "debugpy",
      "request": "launch",
      "module": "sleepy_rework_client_desktop",
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": false
    }
  ]
}
